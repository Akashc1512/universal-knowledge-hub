# ============================================================================
# Universal Knowledge Platform - Environment Configuration
# ============================================================================

# API Server Configuration
UKP_HOST=0.0.0.0
UKP_PORT=8002
UKP_RELOAD=false

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4000

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=universal-knowledge-hub

# Vector Database Configuration
VECTOR_DB_TYPE=pinecone  # Options: pinecone, qdrant, weaviate
VECTOR_DIMENSION=1536  # OpenAI embedding dimension

# Elasticsearch Configuration (for local development)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=knowledge_base

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# PostgreSQL Configuration (for metadata storage)
POSTGRES_URL=postgresql://ukp_user:ukp_password@localhost:5432/ukp_db

# Token Budget Configuration
DAILY_TOKEN_BUDGET=1000000
MAX_TOKENS_PER_QUERY=10000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=detailed

# Security Configuration
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8002"]

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development Configuration
DEBUG=true
ENABLE_HOT_RELOAD=true
ENABLE_API_DOCS=true 