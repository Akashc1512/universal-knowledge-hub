# Production Environment Configuration for sarvanom.com
# Copy this file to .env.production and fill in your actual values

# Backend Configuration
ENVIRONMENT=production
UKP_PORT=8002
UKP_HOST=0.0.0.0
UKP_DEBUG=false
UKP_LOG_LEVEL=INFO

# API Keys (CHANGE THESE BEFORE DEPLOYMENT!)
UKP_API_KEY_USER=your-secure-user-key-here
UKP_API_KEY_ADMIN=your-secure-admin-key-here

# Data Configuration
UKP_DATA_RETENTION_DAYS=90
UKP_ANONYMIZE_QUERIES=true
UKP_LOG_QUERY_CONTENT=false
UKP_CACHE_TTL=3600

# Security Configuration
UKP_RATE_LIMIT_ENABLED=true
UKP_SECURITY_ENABLED=true
UKP_MONITORING_ENABLED=true

# Frontend Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.sarvanom.com
NEXT_PUBLIC_API_KEY=your-secure-user-key-here
NEXT_PUBLIC_APP_NAME=SarvanOM - Universal Knowledge Platform
NEXT_PUBLIC_VERSION=1.0.0
NEXT_PUBLIC_DOMAIN=sarvanom.com
NEXT_PUBLIC_ENABLE_FEEDBACK=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_EXPERT_MODE=false

# Database Configuration
POSTGRES_USER=sarvanom_user
POSTGRES_PASSWORD=your-secure-postgres-password-here

# Monitoring Configuration
GRAFANA_PASSWORD=your-secure-grafana-password-here

# AI Service Keys (for future integration)
OPENAI_API_KEY=your-openai-api-key-here
PINECONE_API_KEY=your-pinecone-api-key-here

# SSL Certificate Paths (for Let's Encrypt)
SSL_CERT_PATH=/etc/letsencrypt/live/sarvanom.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/sarvanom.com/privkey.pem 