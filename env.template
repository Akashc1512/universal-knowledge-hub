# ============================================================================
# Universal Knowledge Platform - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# cp env.template .env

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================
UKP_HOST=0.0.0.0
UKP_PORT=8002
UKP_RELOAD=false
UKP_WORKERS=4
UKP_LOG_LEVEL=INFO
TEST_API_PORT=8003

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================
MAX_RETRIES=3
REQUEST_TIMEOUT=30
CACHE_SIMILARITY_THRESHOLD=0.92
MAX_CACHE_SIZE=10000
AGENT_TIMEOUT_MS=5000
DEFAULT_TOKEN_BUDGET=1000
MAX_TOKENS_PER_QUERY=10000
DAILY_TOKEN_BUDGET=1000000
MESSAGE_TTL_MS=30000

# ============================================================================
# VECTOR DATABASE CONFIGURATION
# ============================================================================
VECTOR_DB_TYPE=pinecone  # Options: pinecone, qdrant, weaviate
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=6333
VECTOR_DB_COLLECTION=knowledge_base
VECTOR_DIMENSION=1536  # OpenAI embedding dimension

# ============================================================================
# ELASTICSEARCH CONFIGURATION
# ============================================================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=knowledge_base
ELASTICSEARCH_API_KEY=your_elasticsearch_api_key_here
ELASTICSEARCH_USERID=
ELASTICSEARCH_PASSWORD=

# ============================================================================
# KNOWLEDGE GRAPH CONFIGURATION
# ============================================================================
KNOWLEDGE_GRAPH_ENDPOINT=http://localhost:7200/repositories/knowledge_base
KNOWLEDGE_GRAPH_USERNAME=
KNOWLEDGE_GRAPH_PASSWORD=
KNOWLEDGE_GRAPH_DATABASE=knowledge_base

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1
OPENAI_TIMEOUT=60
OPENAI_RETRY_ATTEMPTS=3

# ============================================================================
# ANTHROPIC CONFIGURATION
# ============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.1
ANTHROPIC_TIMEOUT=60
ANTHROPIC_RETRY_ATTEMPTS=3

# ============================================================================
# PINECONE CONFIGURATION
# ============================================================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=universal-knowledge-hub
PINECONE_DIMENSION=1536
PINECONE_METRIC=cosine

# ============================================================================
# REDIS CONFIGURATION (for caching)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TIMEOUT=5
REDIS_MAX_CONNECTIONS=10

# ============================================================================
# POSTGRESQL CONFIGURATION (for metadata storage)
# ============================================================================
POSTGRES_URL=postgresql://ukp_user:ukp_password@localhost:5432/ukp_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ukp_db
POSTGRES_USER=ukp_user
POSTGRES_PASSWORD=ukp_password
POSTGRES_SSL_MODE=prefer

# ============================================================================
# TOKEN BUDGET CONFIGURATION
# ============================================================================
DAILY_TOKEN_BUDGET=1000000
MAX_TOKENS_PER_QUERY=10000
TOKEN_COST_PER_1K_PROMPT=0.03
TOKEN_COST_PER_1K_COMPLETION=0.06
BUDGET_ALERT_THRESHOLD=0.8

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=detailed
LOG_FILE_PATH=logs/ukp.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8002"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
DEBUG=true
ENABLE_HOT_RELOAD=true
ENABLE_API_DOCS=true
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
RESPONSE_TIMEOUT_SECONDS=60
CACHE_TTL_SECONDS=3600
SEMANTIC_CACHE_TTL_SECONDS=7200

# ============================================================================
# TESTING CONFIGURATION
# ============================================================================
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/ukp_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_ELASTICSEARCH_URL=http://localhost:9200
TEST_INDEX_PREFIX=test_

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================
ENVIRONMENT=development  # Options: development, staging, production
DOCKER_IMAGE_TAG=latest
KUBERNETES_NAMESPACE=ukp
SERVICE_ACCOUNT_NAME=ukp-service-account

