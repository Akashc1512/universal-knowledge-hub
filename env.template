# Universal Knowledge Platform Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Server Configuration
UKP_HOST=0.0.0.0
UKP_PORT=8002
UKP_WORKERS=4
UKP_RELOAD=false
UKP_LOG_LEVEL=info

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys for Authentication
ADMIN_API_KEY=admin-key-123
USER_API_KEY=user-key-456
READONLY_API_KEY=readonly-key-789

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=ukp-knowledge-base

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Redis (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# KNOWLEDGE GRAPH CONFIGURATION
# =============================================================================

# SPARQL Endpoint
SPARQL_ENDPOINT=http://localhost:8080/sparql
SPARQL_USERNAME=admin
SPARQL_PASSWORD=your-sparql-password

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/ukp.log

# Analytics Configuration
ANALYTICS_ENABLED=true
DATA_RETENTION_DAYS=30
ANONYMIZE_QUERIES=true
LOG_QUERY_CONTENT=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
MAX_CONCURRENT_REQUESTS=10
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# Security Scanning
SECURITY_SCANNING_ENABLED=true
THREAT_DETECTION_ENABLED=true
ANOMALY_DETECTION_ENABLED=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Query Cache
QUERY_CACHE_MAX_SIZE=500
QUERY_CACHE_TTL=3600

# Semantic Cache
SEMANTIC_CACHE_MAX_SIZE=200
SEMANTIC_CACHE_TTL=7200

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Token Budgets
DEFAULT_TOKEN_BUDGET=4000
RETRIEVAL_TOKEN_BUDGET=2000
SYNTHESIS_TOKEN_BUDGET=3000
CITATION_TOKEN_BUDGET=1000

# Agent Timeouts
AGENT_TIMEOUT_SECONDS=30
RETRIEVAL_TIMEOUT_SECONDS=15
SYNTHESIS_TIMEOUT_SECONDS=20

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
DEBUG=false
TESTING=false
MOCK_EXTERNAL_APIS=false

# spaCy Configuration
SPACY_MODEL=en_core_web_sm
SPACY_DOWNLOAD_MODEL=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker Configuration
DOCKER_IMAGE=universal-knowledge-platform
DOCKER_TAG=latest

# Kubernetes Configuration
K8S_NAMESPACE=ukp
K8S_REPLICAS=3

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# External APIs (optional)
WOLFRAM_ALPHA_API_KEY=your-wolfram-alpha-key
NEWS_API_KEY=your-news-api-key
WEATHER_API_KEY=your-weather-api-key

# =============================================================================
# BACKUP AND STORAGE
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=/app/data
CLOUD_STORAGE_BUCKET=ukp-backups

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack Configuration
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#ukp-alerts

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_ADVANCED_SEARCH=true
ENABLE_FACT_CHECKING=true
ENABLE_CITATION_GENERATION=true
ENABLE_ANALYTICS=true
ENABLE_SECURITY_SCANNING=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true 