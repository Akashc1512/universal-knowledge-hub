# Universal Knowledge Platform Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Server Configuration
UKP_HOST=0.0.0.0
UKP_PORT=8002
UKP_WORKERS=4
UKP_RELOAD=false
UKP_LOG_LEVEL=info

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_SECRET=your-api-key-secret-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your-encryption-key-change-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# API Keys for Authentication
ADMIN_API_KEY=admin-key-123-change-in-production
USER_API_KEY=user-key-456-change-in-production
READONLY_API_KEY=readonly-key-789-change-in-production

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=ukp-knowledge-base

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password
ELASTICSEARCH_INDEX=universal-knowledge-hub

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Token Management
DEFAULT_TOKEN_BUDGET=1000
MAX_TOKENS_PER_QUERY=10000
DAILY_TOKEN_BUDGET=1000000

# Confidence Thresholds
CONFIDENCE_THRESHOLD=0.7
HIGH_SIMILARITY_THRESHOLD=0.95
SIMILARITY_THRESHOLD=0.92

# Agent Timeouts
AGENT_TIMEOUT_MS=30000
REQUEST_TIMEOUT=30
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache Settings
MAX_CACHE_SIZE=10000
CACHE_SIMILARITY_THRESHOLD=0.92
DEFAULT_QUERY_TTL=3600
FACTUAL_QUERY_TTL=1800
ANALYTICAL_QUERY_TTL=3600
CREATIVE_QUERY_TTL=7200

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security Limits
MAX_QUERY_LENGTH=1000
SECURITY_EVENT_MAX_SIZE=1000

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Concurrency
MAX_CONCURRENT_WORKERS=5
MAX_CONCURRENT_REQUESTS=100

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test API Configuration
TEST_API_BASE_URL=http://localhost:8003
TEST_API_PORT=8003
TEST_TIMEOUT=30

# Performance Test Thresholds
TEST_RESPONSE_TIME_LIMIT=1000
TEST_THROUGHPUT_RPS=100
TEST_ERROR_RATE_THRESHOLD=0.1
TEST_MEMORY_THRESHOLD_MB=512
TEST_CPU_THRESHOLD_PERCENT=80

# Load Testing Configuration
TEST_CONCURRENT_USERS=100
TEST_DURATION_SECONDS=300
TEST_RAMP_UP_SECONDS=60
TEST_TARGET_RPS=1000
TEST_MAX_RESPONSE_TIME_MS=500

# Security Testing
TEST_SQL_INJECTION_ATTEMPTS=10
TEST_XSS_ATTEMPTS=10
TEST_RATE_LIMIT_ATTEMPTS=100
MAX_PAYLOAD_SIZE=1048576

# Locust Configuration
LOCUST_MIN_WAIT=1
LOCUST_MAX_WAIT=3
LOCUST_USERS=1000

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Prometheus
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_SCRAPE_INTERVAL=15s

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_TAG=latest

# Kubernetes Configuration
NAMESPACE=universal-knowledge-hub
REPLICA_COUNT=3

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Knowledge Graph Endpoints
SPARQL_ENDPOINT_HOST=localhost
SPARQL_ENDPOINT_PORT=8890
KNOWLEDGE_GRAPH_ENDPOINT=http://localhost:7200/repositories/knowledge_base

# Database Names
DATABASE_NAME=knowledge_base
APPLICATION_DATABASE=ukp_db

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Server
DEV_HOST=localhost
DEV_PORT=8000
HOT_RELOAD=true

# Testing Database
TEST_DATABASE_URL=sqlite:///test.db
TEST_REDIS_URL=redis://localhost:6379/1 

# =============================================================================
# PRODUCTION FEATURES CONFIGURATION
# =============================================================================

# Connection Pooling
CONNECTION_POOL_SIZE=10
POOL_TIMEOUT=30.0
MAX_KEEPALIVE_TIME=300

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
RATE_LIMIT_WINDOW=60

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5.0

# Retry Logic Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_INITIAL_DELAY=1.0
RETRY_MAX_DELAY=60.0
RETRY_EXPONENTIAL_BASE=2.0

# Graceful Shutdown
SHUTDOWN_TIMEOUT=30

# Feature Flags
ENABLE_STREAMING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_WEBSOCKET=true
ENABLE_ADVANCED_ANALYTICS=true 